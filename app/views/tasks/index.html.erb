<div class="container">
  <h1>My tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item"><i class="far fa-<%= task.completed ? 'check-' : '' %>square me-2"></i> <%= link_to task.title, task_path(task) %> - <%= link_to task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%><i class='fa-regular fa-trash-can'></i><% end %> </li>
    <% end %>
  </ul>
  <p class="mt-3 py-2 border-top"><%= link_to 'Create a new task', new_task_path %></p>
</div>
